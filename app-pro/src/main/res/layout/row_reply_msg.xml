<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/apk_item_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="-12dp"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="-12dp"
            android:layout_marginEnd="-12dp"
            android:foreground="@drawable/ripple_100"
            android:padding="8dp"
            android:background="@color/white"
            android:src="@drawable/icon_close"
            app:tint="@color/red" />


        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:padding="12dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAscii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="12dp"
                android:layout_toStartOf="@id/llOptions"
                android:text="ascii face"
                android:textColor="@color/txtPrime"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/llOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="@drawable/ripple_100"
                    android:padding="8dp"
                    android:src="@drawable/icon_edit"
                    app:tint="@color/items" />

                <ImageView
                    android:id="@+id/ivWpShare"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="@drawable/ripple_100"
                    android:padding="8dp"
                    android:src="@drawable/e_whats_thumb"
                    app:tint="@color/items" />


                <ImageView
                    android:id="@+id/ivCopy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="@drawable/ripple_100"
                    android:padding="8dp"
                    android:src="@drawable/icon_copy"
                    app:tint="@color/items" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>